<div class='container px-5 px-sm-0'>
  <div class="serchebar d-flex justify-content-center mb-1 col-12">
    <%= render 'public/searches/search' %>
  </div>
  <div class='row'>
    <% if @customer.is_deleted === true %>
      <h4>退会済みのユーザーです。</h4>
    <% else %>
    <div class="col-md-3">
    <h3>マイページ</h3>
    <%= render 'info', customer: @customer %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>投稿一覧</h2>
      <%= render 'public/items/index',items: @items %>
    </div>
    <% end %>
 </div>
</div>