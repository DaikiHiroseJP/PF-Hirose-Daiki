<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='form'>
    <div class='col-md-12 offset-md-1'>
    <h2>投稿詳細</h2>
      <div class="table-responsive">
        <table class='table'>
          <tr>
            <td><%= link_to(@item.customer) do %>
              <%= image_tag @item.get_image, size:"200x200" %><br>
              <%= @item.customer.name %>
              <% end %>
            </td>
            <td><%= link_to @item.title, @item %></td>
            <td><%= @item.body %></td>
            <td>
            <% if @item.category === nil %>
              no tag
            <% else %>
              <%= link_to @item.category, search_item_path(keyword: @item.category), 'data-turbolinks': false %>
            <% end %>
            </td>
            <td><i class="fas fa-heart" aria-hidden="true" style="color: red;"></i><%= @item.favorite.size %></td>
            <td>コメント数: <%= @item.item_comments.count %></td>
            <td><p class="view-count">閲覧数: <%#= @item_detail.view_counts.count %></p></td>
            <td><%= render "public/items/static_rate", item: @item %></td>
            <td><%= link_to 'Edit', edit_admin_item_path(@item), class: "btn btn-sm btn-success", 'data-turbolinks': false %></td>
            <td><%= link_to 'Destroy', @item, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>

          </tr>
        </table>
      </div>
      <div id="comments_area"><%= render "public/item_comments/index", item: @item %></div>

    </div>
  </div>
</div>

