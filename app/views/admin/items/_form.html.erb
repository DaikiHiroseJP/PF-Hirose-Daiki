
<%= form_with model:item,  url:path, local:true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control item_title' %>
  </div>
  <div class="form-group">
    <%= f.label :opinion %>
    <%= f.text_area :body, class: 'form-control item_body' %>
  </div>
   <div class="form-group">
    <%= f.label :Tag %>
    <%= f.text_field :category, class: 'form-control item_category' %>
  </div>
  <div>
    <%= f.label :is_published_flag, "公開", value: true %>
    <%= f.radio_button :is_published_flag, 'true' %>
  </div>
  <div>
    <%= f.label :is_published_flag, "非公開", value: false %>
    <%= f.radio_button :is_published_flag,'false' %>
  </div>
  <div>
    <%= f.label :is_admin_published_flag, "管理者公開", value: true %>
    <%= f.radio_button :is_admin_published_flag, 'true' %>
  </div>
  <div>
    <%= f.label :is_admin_published_flag, "管理者非公開", value: false %>
    <%= f.radio_button :is_admin_published_flag,'false' %>
  </div>

    <div class="form-group">
      <%= render "public/items/static_rate", item: item %>
    </div>

  <div class="form-group">
    <%= f.submit  "変更を保存", class: "btn btn-success px-4 mt-3" %>
  </div>
<% end %>

