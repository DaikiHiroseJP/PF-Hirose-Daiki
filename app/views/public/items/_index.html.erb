  <% items.each do |item| %>
    <div class="col mb-4">
      <div class="card h-100 card-item">
        <%= link_to item_path(item), 'data-turbolinks': false do %>
          <%= image_tag item.get_image, size:"200x200", class:"card-img-top"; %>
        <% end %>
        <div class="card-body">
            <%= link_to(item_path(item.id), class:"text-dark", 'data-turbolinks': false) do %>
              <strong class="card-title"><span><%= item.title.truncate(21) %></span></strong>
            <% end %>
            <div>
            <i class="fas fa-tag"></i>
            <% if item.tags.name === nil %>
                no tag
            <% else %>
              <% item.tags.each do |tag| %>
                <%= link_to tag.name, search_item_path(tag_id: tag.id), 'data-turbolinks': false %><%="(#{tag.items.published.admin_published.count})" %>
              <% end %>
            <% end %>
            </div>
            <div class="d-flex">
              <%= link_to(item.customer) do %>
                <span><i class="fas fa-user"></i> By <%= item.customer.name %>ã€€<%= render 'public/favorites/favorite', item: item %></span>
              <% end %>
            </div>
        </div>
      </div>
    </div>
  <% end %>



