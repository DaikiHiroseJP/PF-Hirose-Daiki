<div class="mx-auto d-flex">
<% if customer_signed_in? %>
    <%= form_with url: customer_search_path, local: true, method: :get do |f| %>
      <div class="input-group">
      <%= f.text_field :word, placeholder: "検索", :size=>"40", class:"form-control" %>
      <span class="input-group-btn">
      <%= f.submit "検索",class:"btn btn-outline-success" %>
      </span>
      <%= f.select :search, options_for_select([["新しい順","latest_field"], ["古い順","old_field"]]), {}, {class:"form-control"} %>
      </div>
    <% end %>
<% end %>
</div>