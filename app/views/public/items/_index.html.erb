<div class="card-deck mb-3 ">
  <div class="row">
    <% items.each do |item| %>
    <div class="col-sm-4 mb-3">
      <div class="card h-100">
        <%= link_to item_path(item), 'data-turbolinks': false do %>
          <%= image_tag item.get_image, size:"200x200", class:"card-img-top"; %>
        <% end %>
        <div class="card-body">
            <div class="d-flex">
            <%= link_to(item_path(item.id), class:"text-dark", 'data-turbolinks': false) do %>
              <strong class="card-title"><i class="far fa-flag"></i><span><%= item.title %></span></strong>
            <% end %>ã€€<%= render 'public/favorites/favorite', item: item %></div>
            <p class="card-text"><%= item.body.truncate(10) %></p>
            <%= link_to(item.customer) do %>
              <span><i class="fas fa-user"></i> By <%= item.customer.name %></span>
            <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
