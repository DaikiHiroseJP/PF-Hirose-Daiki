<div class="mx-auto d-flex">
<% if customer_signed_in? %>
  <div class="search_form">
    <%= form_with url: customer_search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word, placeholder: "検索", :size=>"35" %>
      <%= f.select :search, options_for_select([["新しい順","latest_field"], ["古い順","old_field"]]) %>
      <%= f.submit "検索" %>
    <% end %>
  </div>
<% end %>
</div>