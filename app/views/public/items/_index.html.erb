
<div class="card-columns mb-3 ">
    <% items.each do |item| %>
      <div class="card h-100">
        <%= link_to item_path(item), 'data-turbolinks': false do %>
          <%= image_tag item.get_image, size:"200x200", class:"card-img-top"; %>
        <% end %>
        <div class="card-body">
            <div class="d-flex">
            <%= link_to(item_path(item.id), class:"text-dark", 'data-turbolinks': false) do %>
              <strong class="card-title"><span><%= item.title.truncate(9) %></span></strong>
            <% end %>ã€€<%= render 'public/favorites/favorite', item: item %></div>
            <p class="card-text"><%= item.body.truncate(12) %></p>
            <%= link_to(item.customer) do %>
              <span><i class="fas fa-user"></i> By <%= item.customer.name %></span>
            <% end %>
        </div>
      </div>
    <% end %>
</div>
<div class=" d-flex mb-3 justify-content-center">
  <%= paginate items, theme: 'twitter-bootstrap-4' %>
</div>


