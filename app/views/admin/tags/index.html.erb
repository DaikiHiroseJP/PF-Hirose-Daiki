<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2 class="mb-5">タグ一覧・追加・削除</h2>
      <%= form_with model: @tag, url: admin_tags_path do |f| %>
      <div class="form-group">
        <%= f.label :tag, "タグ名", class: 'mr-5 font-weight-bold' %>
        <%= f.text_field :name, autofocus: true, required: true, class: 'mr-5' %>
        <%= f.submit '新規登録', class: 'btn btn-success' %>
      </div>
      <% end %>
      <table class='table table-hover table-inverse'>
        <thead class="bg-light">
          <tr>
            <th>タグ</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @tags.each do |tag| %>
            <tr>
              <td>
                <%= link_to tag.name, admin_search_item_path(tag_id: tag.id), 'data-turbolinks': false %><%="(#{tag.items.published.admin_published.count})" %>
              </td>
              <td><%= link_to '編集する', edit_admin_tag_path(tag.id), class: 'btn btn-success' %></td>
              <td><%= link_to '削除', admin_tag_path(tag), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class=" d-flex mb-3 justify-content-center">
    <%= paginate @tags %>
  </div>
</div>

