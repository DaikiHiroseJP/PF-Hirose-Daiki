<div class="mx-auto d-flex">
<% if customer_signed_in? %>
  <div class="search_form">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      投稿検索フォーム<%= f.text_field :word %>
      <%= f.select :search, options_for_select([["新しい順","latest_field"], ["古い順","old_field"], ["評価の高い順","star_count_field"], ["一週間のいいねの多い順","favorite_week"]]) %>
      <%= f.submit "検索" %>
    <% end %>
  </div>
  <div class="search_form">
    <%= form_with url: search_item_path, local: true, method: :get do |f| %>
      <%= f.text_field :keyword %>
      <%= f.submit "タグ検索" %>
    <% end %>
  </div>
<% end %>
</div>